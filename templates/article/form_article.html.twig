{% extends 'base.html.twig' %}

{% block content %}
	<div class="container">
		<div class="row my-4 d-flex align-middle justify-content-center">
			<div class="col-12">
				{% if article is defined %}
					<h3 class="text-center">Modification d'un article</h3>
				{% else %}
					<h3 class="text-center">Création d'un article</h3>
				{% endif %}

			</div>
		</div>
		<div class="row my-4 d-flex align-middle justify-content-center">
			<div class="col-8 mx-auto">
				{{ form_start(form, { 'attr': { novalidate: 'novalidate' }, 'method': 'POST' } ) }}

				{{ form_row(form.title) }}
				{{ form_row(form.subtitle) }}
				{{ form_row(form.content) }}
				{{ form_row(form.category) }}
				{{ form_row(form.photo) }}
				{% if article is defined %}
					{{ form_row(form.submit, { 'label': 'Modifier l\'article' }) }}
				{% else %}
                    {{ form_row(form.submit, { 'label': 'Créer l\'article' }) }}
				{% endif %}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
